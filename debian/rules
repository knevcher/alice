#!/usr/bin/make -f

SRC_DIR=/usr/lib/erlang/lib/alice
FAKE_SRC_DIR=$(CURDIR)/debian/alice$(SRC_DIR)

build: build-stamp
build-stamp:
	dh build
	touch build-stamp

clean:
	dh clean
	rm -f build-stamp
	rm -f install-stamp

override_dh_auto_test:

install: build install-stamp
	cp -r $(CURDIR)/ebin/* $(FAKE_SRC_DIR)/ebin
	cp -r $(CURDIR)/deps/* $(FAKE_SRC_DIR)/deps
	cp -r $(CURDIR)/include/* $(FAKE_SRC_DIR)/include
	cp -r $(CURDIR)/scripts/* $(FAKE_SRC_DIR)/scripts
	cp -r $(CURDIR)/src/* $(FAKE_SRC_DIR)/src

	install -m 644 -o root -g root $(CURDIR)/alice $(CURDIR)/debian/alice/usr/sbin

install-stamp:
	dh install
	touch install-stamp

binary-arch: install
	dh binary-arch

binary-indep: install
	dh binary-indep

binary: binary-arch binary-indep

